<% include layout.ejs %>
  
   <div class="container">


    <h1 class="mt-4 mb-3 text-center"><%= title %>
    </h1>
    <div class="row">

  <% allnew.forEach(function(news){  %>

    <div class="col-lg-4 mb-4">
          <div class="card h-100">
                <h4 class="card-header"> <%= news.title %> </h4>
                <div class="card-body">
                    <img src="/images/uploads/<%= news.img %>" style="width: 100%;height: 200px;"/>
                    <p class="card-text"><%= news.body %></p>
                </div>
                <div class="card-footer">
                <a href="/news/fullnew/<%= news._id %>" class="btn btn-primary">Learn More</a>
                </div>
        </div>
      </div>
      <% }) %>
    </div>

  </div>

<% include layoutback.ejs %>
